<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#2d2d2d">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <LinearLayout
            android:id="@+id/home_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/bottom_view_home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_page"
                android:textSize="13sp"
                android:layout_marginTop="-7dp"
                android:layout_marginBottom="5dp"
                android:textColor="@drawable/bottom_view_text"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/teach_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/bottom_view_teach" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/courses_content"
                android:textSize="13sp"
                android:layout_marginTop="-7dp"
                android:layout_marginBottom="5dp"
                android:textColor="@drawable/bottom_view_text"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/music_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/bottom_view_music" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/music"
                android:textSize="13sp"
                android:layout_marginTop="-7dp"
                android:layout_marginBottom="5dp"
                android:textColor="@drawable/bottom_view_text"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/me_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/bottom_view_me" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user"
                android:textSize="13sp"
                android:layout_marginTop="-7dp"
                android:layout_marginBottom="5dp"
                android:textColor="@drawable/bottom_view_text"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
